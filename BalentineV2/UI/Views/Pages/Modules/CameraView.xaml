<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="BalentineV2.UI.Views.Pages.Modules.CameraView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:BalentineV2.UI.Controls"
    BackgroundColor="Transparent">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Thickness x:Key="CameraInset">120,95,24,70</Thickness>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Margin="{StaticResource CameraInset}"
          ColumnDefinitions="*,*"
          ColumnSpacing="12">

        <Border Stroke="{StaticResource ST_Line}"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 12"
                BackgroundColor="#14FFFFFF"
                Padding="10">

            <Grid RowDefinitions="Auto,*" RowSpacing="8">
                <Label Text="Kamera 1"
                       TextColor="{StaticResource ST_Text}"
                       FontAttributes="Bold"
                       Opacity="0.90" />

                <Border Grid.Row="1"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 10"
                        BackgroundColor="#0E000000">
                    <Grid>
                        <controls:AhdCameraView x:Name="CamLeft"
                                                CameraId="0"
                                                CameraResolution="720"
                                                Mirror="False" />
                        <Label x:Name="LeftPh"
                               Text="Görüntü yok"
                               BackgroundColor="#AA000000"
                               TextColor="{StaticResource ST_TextDim}"
                               Opacity="0.95"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               ZIndex="99" />
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <Border Grid.Column="1"
                Stroke="{StaticResource ST_Line}"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 12"
                BackgroundColor="#14FFFFFF"
                Padding="10">

            <Grid RowDefinitions="Auto,*" RowSpacing="8">
                <Label Text="Kamera 2"
                       TextColor="{StaticResource ST_Text}"
                       FontAttributes="Bold"
                       Opacity="0.90" />

                <Border Grid.Row="1"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 10"
                        BackgroundColor="#0E000000">
                    <Grid>
                        <controls:AhdCameraView x:Name="CamRight"
                                                CameraId="1"
                                                CameraResolution="720"
                                                Mirror="False" />
                        <Label x:Name="RightPh"
                               Text="Görüntü yok"
                               BackgroundColor="#AA000000"
                               TextColor="{StaticResource ST_TextDim}"
                               Opacity="0.95"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               ZIndex="99" />
                    </Grid>
                </Border>
            </Grid>
        </Border>

    </Grid>
</ContentPage>
