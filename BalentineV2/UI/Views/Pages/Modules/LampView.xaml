<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BalentineV2.UI.Views.Pages.Modules.LampView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Lamp"
    BackgroundColor="#111">

    <!-- 2 katman:
         1) Arka plan (şimdilik boş)
         2) Animasyon video overlay (tek MediaElement)
         3) Sağ ikon rail (maintained butonlar)
    -->
    <Grid>

        <!-- Arka plan alanı (ileride resim/video konulabilir) -->
        <Grid />

        <!-- Tek animasyon oynatıcı (overlay) -->
        <toolkit:MediaElement
            x:Name="AnimVideo"
            Source=""
            ShouldShowPlaybackControls="false"
            ShouldAutoPlay="false"
            Aspect="AspectFit"
            Volume="0"
            ZIndex="5" />

        <!-- Sağ ikon bar -->
        <Grid
            ColumnDefinitions="*,92"
            ZIndex="10">

            <!-- Sol boş alan -->
            <Grid Grid.Column="0" />

            <!-- Sağ rail -->
            <Grid
                Grid.Column="1"
                Padding="12,18"
                RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                RowSpacing="12"
                VerticalOptions="Center"
                HorizontalOptions="End">

                <!-- 1) tepe_lambasi -->
                <Border
                    x:Name="BtnTepeLambasi"
                    Stroke="#D7D7D7"
                    StrokeThickness="1"
                    BackgroundColor="#1A1A1A"
                    StrokeShape="RoundRectangle 14"
                    HeightRequest="62"
                    WidthRequest="62">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnButtonTapped" CommandParameter="tepe_lambasi" />
                    </Border.GestureRecognizers>
                    <Image
                        Source="tepe_lambasi.svg"
                        HeightRequest="28"
                        WidthRequest="28"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" />
                </Border>

                <!-- 2) pick_up_kayar -->
                <Border
                    x:Name="BtnPickUpKayar"
                    Grid.Row="1"
                    Stroke="#D7D7D7"
                    StrokeThickness="1"
                    BackgroundColor="#1A1A1A"
                    StrokeShape="RoundRectangle 14"
                    HeightRequest="62"
                    WidthRequest="62">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnButtonTapped" CommandParameter="pick_up_kayar" />
                    </Border.GestureRecognizers>
                    <Image
                        Source="pick_up_kayar.svg"
                        HeightRequest="28"
                        WidthRequest="28"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" />
                </Border>

                <!-- 3) ic_lamba -->
                <Border
                    x:Name="BtnIcLamba"
                    Grid.Row="2"
                    Stroke="#D7D7D7"
                    StrokeThickness="1"
                    BackgroundColor="#1A1A1A"
                    StrokeShape="RoundRectangle 14"
                    HeightRequest="62"
                    WidthRequest="62">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnButtonTapped" CommandParameter="ic_lamba" />
                    </Border.GestureRecognizers>
                    <Image
                        Source="ic_lamba.svg"
                        HeightRequest="28"
                        WidthRequest="28"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" />
                </Border>

                <!-- 4) on-lamba -->
                <Border
                    x:Name="BtnOnLamba"
                    Grid.Row="3"
                    Stroke="#D7D7D7"
                    StrokeThickness="1"
                    BackgroundColor="#1A1A1A"
                    StrokeShape="RoundRectangle 14"
                    HeightRequest="62"
                    WidthRequest="62">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnButtonTapped" CommandParameter="on-lamba" />
                    </Border.GestureRecognizers>
                    <Image
                        Source="on-lamba.svg"
                        HeightRequest="28"
                        WidthRequest="28"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" />
                </Border>

                <!-- 5) ust_kapak-05 -->
                <Border
                    x:Name="BtnUstKapak"
                    Grid.Row="4"
                    Stroke="#D7D7D7"
                    StrokeThickness="1"
                    BackgroundColor="#1A1A1A"
                    StrokeShape="RoundRectangle 14"
                    HeightRequest="62"
                    WidthRequest="62">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnButtonTapped" CommandParameter="ust_kapak" />
                    </Border.GestureRecognizers>
                    <Image
                        Source="ust_kapak-05.svg"
                        HeightRequest="28"
                        WidthRequest="28"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" />
                </Border>

                <!-- 6) arka-lamba -->
                <Border
                    x:Name="BtnArkaLamba"
                    Grid.Row="5"
                    Stroke="#D7D7D7"
                    StrokeThickness="1"
                    BackgroundColor="#1A1A1A"
                    StrokeShape="RoundRectangle 14"
                    HeightRequest="62"
                    WidthRequest="62">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnButtonTapped" CommandParameter="arka-lamba" />
                    </Border.GestureRecognizers>
                    <Image
                        Source="arka-lamba.svg"
                        HeightRequest="28"
                        WidthRequest="28"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" />
                </Border>

                <!-- 7) pick_up_ic_isik -->
                <Border
                    x:Name="BtnPickUpIcIsik"
                    Grid.Row="6"
                    Stroke="#D7D7D7"
                    StrokeThickness="1"
                    BackgroundColor="#1A1A1A"
                    StrokeShape="RoundRectangle 14"
                    HeightRequest="62"
                    WidthRequest="62">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnButtonTapped" CommandParameter="pick_up_ic_isik" />
                    </Border.GestureRecognizers>
                    <Image
                        Source="pick_up_ic_isik.svg"
                        HeightRequest="28"
                        WidthRequest="28"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" />
                </Border>

            </Grid>
        </Grid>

    </Grid>
</ContentPage>
