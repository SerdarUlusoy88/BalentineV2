            Volume="0" />

        <!-- İleride eklenecek UI için boş overlay katmanı -->
        <Grid
            BackgroundColor="#00000000"
            Padding="24">
            <!-- Şimdilik boş -->
        </Grid>

    </Grid>
</ContentPage>
